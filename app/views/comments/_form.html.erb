<%= form_with url: comments_create_path do | form | %>
  <% if @comment %>
    <% if @comment.errors.any? %>
      <div>
        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
  <div>
    <%= form.label 'コメント', class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', maxlength: 300 %>
  </div>
  <div>
    <%= form.submit '送信', name: nil, class: 'btn btn-primary mt-2' %>
  </div>
<% end %>