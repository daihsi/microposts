<div class="text-center mt-3">
  <h1>
    ログイン
  </h1>
  <%= form_with url: login_path, class: 'w-50 mx-auto', local: true do |form| %>
    <div class="mb-3">
        <%= form.label 'メールアドレス', class: 'form-label' %>
        <%= form.email_field :email , class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label 'パスワード', class: 'form-label' %><br>
      <%= form.password_field :password , class: 'form-control' %>
    </div>
    <%= form.submit 'ログイン', class: 'btn btn-primary mb-3' %>
  <% end %>
  <%= link_to 'ユーザー登録ページへ', users_new_path %>
</div>
