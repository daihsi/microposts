<div class="text-center mx-auto">
  <h1 class="mt-3 mb-3">
    詳細ページ
  </h1>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">
          名前
        </th>
        <td>
          <%= @user.name %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          メールアドレス
        </th>
        <td>
          <%= @user.email %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= follow_or_unfollow_button(target_user: @user) %>
  <%= render partial: 'relationships/tabs', locals: {follows: @follows, follower: @follower} %>
</div>